{% include 'Public/Header.html.twig' with {'page_name': 'Login'} %}
<div class="container">

    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Login</h1>
            <p class="lead">Not a member?</p>
            <a class="badge" style="font-size: medium; padding: 10px;" href="/register">Register Here</a>
            <br />
            <br />
            {% for error in errors %}
                <div style="color: red;">{{ error }}</div>
            {% endfor %}
            <form action="/login" method="post">
                <input name="username" placeholder="Email Address" type="email" /><br /><br />
                <input name="password" placeholder="Password" type="password" /><br /><br />
                <button type="submit">Login</button>
            </form>
        </div>
    </div>

</div>
{% include 'Public/Footer.html.twig' %}
